<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#FFE000"
	    android:orientation="vertical"
	    android:scrollbars="vertical" >
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
        
        	<TextView
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:text="@string/rcs_mineral"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtRCS"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="42dp"
	        android:orientation="horizontal" >
	        
	        <TextView
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:text="@string/vol_reservas"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtVR"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <TextView
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:text="@string/ton_anno"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtProd"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
	    <RadioGroup 
	        android:id="@+id/rdg_metodo"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
	        <RadioButton
		        android:text="@string/cam_pilares" />
			
		    <RadioButton
		        android:text="@string/cam_almacen" />
		    
		    <RadioButton
		        android:text="@string/subniveles" />
			
		    <RadioButton
		        android:text="@string/corte_relleno" />
		    
		    <RadioButton
		        android:text="@string/hund_subniveles" />
			
		    <RadioButton
		        android:text="@string/hund_bloques" />
		    
		    <RadioButton
		        android:id="@+id/rbFL"
		        android:text="@string/frente_largo" />
	        
	    </RadioGroup>
	    
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="42dp"
	        android:orientation="horizontal" >
	        
	        <TextView
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:text="@string/den_mineral"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtDenMin"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
		<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="48dp"
	        android:orientation="horizontal" >
	        
	        <TextView
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:text="@string/transp_mineral"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtTranspMineral"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
		
	</LinearLayout>

</ScrollView>
