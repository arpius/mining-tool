<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#FFE000"
	    android:orientation="vertical"
	    android:scrollbars="vertical" >
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
        
        	<TextView
        	    android:layout_weight="2"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:text="@string/rcs_mineral"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtRCS"
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:hint="@string/mag_rcs"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
        
        	<TextView
        	    android:layout_weight="2"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:text="@string/rcs_esteril"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtRCSEst"
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:hint="@string/mag_rcs"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <TextView
	            android:layout_weight="2"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:text="@string/vol_reservas"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtVR"
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:hint="@string/mag_reservas"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <TextView
	            android:layout_weight="2"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:text="@string/ton_anno"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:hint="@string/mag_produccion"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
		<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <TextView
	            android:layout_weight="2"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:text="@string/ratio"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtRatio"
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="42dp"
	        android:orientation="horizontal" >
	        
	        <TextView
	            android:layout_weight="2"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:text="@string/den_mineral"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtDenMin"
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:hint="@string/mag_densidad"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
		<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <TextView
	            android:layout_weight="2"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:text="@string/den_esteril"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtDenEst"
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:hint="@string/mag_densidad"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
		<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <TextView
	            android:layout_weight="2"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:text="@string/transp_esteril"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtTranspEst"
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:hint="@string/mag_distancia"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
		<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <TextView
	            android:layout_weight="2"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:text="@string/transp_mineral"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtTranspMineral"
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:hint="@string/mag_distancia"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
	    
		<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <TextView
	            android:layout_weight="2"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:text="@string/pendiente"
		        android:textStyle="bold"
		        android:gravity="center_horizontal" />
	        
	        <EditText
	            android:id="@+id/edtPendiente"
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:hint="@string/mag_pendiente"
	            android:inputType="numberDecimal" />
	        
	    </LinearLayout>
		
	</LinearLayout>

</ScrollView>
